{
  "name": "my-audiobook-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "dev": "yarn vite",
    "build": "yarn tsc -b && yarn db:migrate && yarn db:seed",
    "start": "yarn build && yarn workspace postgresql-database migrate",
    "lint": "yarn eslint .",
    "preview": "yarn vite preview",
    "format": "yarn prettier --write .",
    "db:migrate": "node --loader ts-node/esm src/migrate.ts",
    "db:seed": "node --loader ts-node/esm src/seed.ts"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@sequelize/postgres": "^7.0.0",
    "@types/mongoose": "^5.11.97",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.3",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "mongoose": "^8.12.1",
    "pg": "^8.13.3",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.9",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.2.0",
    "sequelize": "^6.37.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/bootstrap": "^5.2.10",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/pg": "^8.11.11",
    "@types/react": "^18.2.14",
    "@types/react-bootstrap": "^0.32.37",
    "@types/react-dom": "^18.2.7",
    "@types/sequelize": "^4.28.20",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "knex": "^3.1.0",
    "pg": "^8.13.3",
    "prettier": "^3.5.3",
    "ts-node-esm": "^0.0.6",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
